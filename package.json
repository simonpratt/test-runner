{
  "name": "test-runner",
  "author": "Simon Pratt (19920260+simonpratt@users.noreply.github.com)",
  "license": "MIT",
  "scripts": {
    "setup": "npm run ci-all && npm run build --workspace=test-runner-mock && docker build ./test-runner-mock -t sample",
    "build-all": "npm run build --workspaces --if-present",
    "install-all": "npm install --workspaces  --if-present",
    "ci-all": "npm ci --workspaces  --if-present",
    "ci-all-production": "npm ci --workspaces  --if-present --omit=dev",
    "lint-all": "npm run lint --workspaces --if-present"
  },
  "workspaces": [
    "lib/*",
    "test-runner-mock",
    "test-runner-api",
    "test-runner-orchestrator",
    "test-runner-client"
  ],
  "private": true
}
